pipeline {
    agent {
		docker { image 'ajay27jsr/money_api' }
		}

    stage('Build Docker Image') {
                steps{
                    sh "docker build -t money_pred:v1"
                }
            }
            stage('Run Docker Image And Expose API'){
                steps {
                sh "docker run -d -p 5000:5000 --name money_pred money_pred:v1"
                }
      }
}
